{
    "manifest_version": 2.0,
    "id": "openai-assistant",
    "type": "widget",
    "name": "OpenAI Assistant Widget",
    "namespace": "OpenAIAssistant",
    "version": "7.0-1",
    "author": "Custom Widget",
    "url": "https://github.com/yourusername",
    "description": "Advanced AI Assistant widget with multiple OpenAI model selection and conversation history",
    "actions": {
        "widget.openai-assistant.view": {
            "class": "WidgetView"
        }
    },
    "widget": {
        "name": "OpenAI Assistant",
        "size": {
            "width": 4,
            "height": 4
        },
        "refresh_rate": 0,
        "js_class": "CWidgetOpenAIAssistant"
    },
    "assets": {
        "css": [
            "widget.css",
            "form.css"
        ],
        "js": [
            "marked.min.js",
            "chart-helper.js",
            "class.widget.js"
        ]
    }
}

